{
  "manifest_version": 3,
  "name": "AI Voice Web Controller",
  "version": "1.0",
  "permissions": ["activeTab"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "start-listening": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "Start voice listening"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
